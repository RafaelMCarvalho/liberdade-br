<%= content_for :page_title do 'Eventos e oportunidades' end %>

<%= content_for :page_id do 'events_and_opportunities' end %>

<%= content_for :content do %>
  <!-- CONTENT BEGIN -->
  <div id="content_wrapper">
    <div id="content_shadow"></div>
    <div id="content_gradiente"></div>

    <div id="content">

      <div id="main_contet">
        <% unless @events.limit(6).empty? %>
          <h2>Eventos em destaque</h2>

          <ul class="events_list">
            <% @events.limit(6).each do |e| %>
              <li>
                <div class="date">
                  <p>
                    <span class="day"><%= e.date.strftime('%d') %></span>
                    <span class="month"><%= e.date.strftime('%b') %></span>
                  </p>
                </div>

                <div class="event_content">
                  <h3><%= link_to e.name, '#' %></h3>

                  <% if e.description %>
                    <p class="resume">
                      <%= smart_truncate(e.description, 200) %>
                    </p>
                  <% end %>

                  <p class="more"><%= link_to 'Mais informações', '#' %></p>
                </div>
              </li>
            <% end %>
          </ul>
        <% end %>

        <% unless @events.length > 6 %>
          <hr />

          <p class="buttom"><%= link_to 'Mais eventos', '#' %></a></p>
        <% end %>
      </div>

      <div id="sidebar">
        <% unless @opportunities.empty? %>
          <h2>oportunidades</h2>

          <ul class="opportunities">
            <% @opportunities.each do |o| %>
              <li>
                <h3><%= link_to o.title, '#' %></h3>

                <% if o.content %>
                  <p class="resume">
                    <%= smart_truncate(o.content, 200) %>
                  </p>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% end %>

      </div>

    </div>
  </div>
  <!-- CONTENT END -->

<% end %>
