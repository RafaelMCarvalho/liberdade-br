<% unless (authors = post.authors).empty? %>
  <div class="sidebar_box_wrapper">
    <div class="sidebar_box">
      <h3><%= authors.length == 1 ? 'Autor' : 'Autores' %> deste post</h3>

      <ul>
        <% authors.each do |a| %>
          <li><%= link_to a.name, posts_author_path(a) %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

