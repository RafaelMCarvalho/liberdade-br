<%= content_for :page_title do 'Posts' end %>

<%= content_for :page_id do 'posts' end %>

<%= content_for :content do %>
  <!-- CONTENT BEGIN -->
  <div id="content_wrapper">
    <div id="content_shadow"></div>
    <div id="content_gradiente"></div>

    <div id="content">

      <div id="main_content">
        <%= render :partial => 'search_form', :locals => { :search => @search } %>

        <%= render :partial => 'posts', :locals => { :posts => @posts } %>

        <hr />

        <%= paginate @posts %>
      </div>

      <div id="sidebar">
        <%= render :partial => 'widgets/send_post' %>
        <%= render :partial => 'widgets/facebook_likebox' %>
        <%= render :partial => 'widgets/facebook_fanpage' %>
      </div>
    </div>
  </div>
  <!-- CONTENT END -->
<% end %>
