<% unless configuration.twitter.blank? %>
  <div class="sidebar_box_wrapper" id="twitter_box">
    <div class="sidebar_box">
      <h3>Liberdade.BR no Twitter</h3>

      <div class="iframe">
        <script charset="utf-8" src="http://widgets.twimg.com/j/2/widget.js"></script>
        <script type="text/javascript">
          new TWTR.Widget({
            version: 2,
            type: 'profile',
            rpp: 4,
            interval: 30000,
            width: 310,
            height: 300,
            theme: {
              shell: {
                background: '#ffffff',
                color: '#000000'
              },
              tweets: {
                background: '#ffffff',
                color: '#444444',
                links: '#5599ff'
              }
            },
            features: {
              scrollbar: false,
              loop: false,
              live: false,
              behavior: 'all'
            }
          }).render().setUser("<%= configuration.twitter.split('/').last %>").start();
        </script>
      </div>
    </div>
  </div>
<% end %>
