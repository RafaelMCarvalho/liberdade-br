<% unless configuration.facebook_like_goal.blank? or configuration.facebook.blank? %>
  <div class="sidebar_box_wrapper" id="facebook_box">
    <div class="sidebar_box">
      <h3>Ajude-nos a conseguir <%= configuration.facebook_like_goal %> f√£ns no Facebook</h3>

      <div class="facebook_progress_bar">
        <p><span><%= @fb_likes %></span></p>
      </div>

      <div class="facebook_like_iframe">
        <iframe src="https://www.facebook.com/plugins/like.php?href=YOUR_URL" scrolling="no" frameborder="0" style="border:none; width:300px; height:80px"></iframe>
      </div>
    </div>
  </div>
<% end %>

<% unless @events.empty? %>
  <div class="sidebar_panel" id="events_panel">
    <h3><a href="#">Eventos</a></h3>

    <ul>
      <% @events.each do |e| %>
        <li>
          <span class="date"><%= e.date.strftime('%d/%m') %></span>
          <%= link_to e.name, '#' %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<% unless @opportunities.empty? %>
  <div class="sidebar_panel" id="opportunities_panel">
    <h3><a href="#">Oportunidades</a></h3>

    <ul>
      <% @opportunities.each do |o| %>
        <li><%= link_to o.title, '#' %></li>
      <% end %>
    </ul>
  </div>
<% end %>
